<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/mvcBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="MVC Design Pattern"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/gray"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/mvpBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="MVP Design Pattern"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/gray"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/mvcBtn"/>

    <Button
        android:id="@+id/mvvmBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="MVVM Design Pattern"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/gray"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/mvpBtn"/>

    <Button
        android:id="@+id/mviBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="MVI Design Pattern"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/gray"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/mvvmBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>